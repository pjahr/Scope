<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:l="clr-namespace:Scope.FileViewer.BNK">

  <DataTemplate
    DataType="{x:Type l:BnkFileViewer}">

    <Grid>

      <TextBlock
        Text="{Binding ErrorMessage}" />

      <ScrollViewer>

        <ContentControl
          Content="{Binding Image}" />

      </ScrollViewer>

    </Grid>

  </DataTemplate>

</ResourceDictionary>
